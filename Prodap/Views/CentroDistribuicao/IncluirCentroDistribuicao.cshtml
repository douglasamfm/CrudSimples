@model Prodap.Models.CentroDistribuicao

@{
    ViewBag.Title = "IncluirCentroDistribuicao";
}

<h2>Novo Centro de Distribuição</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
